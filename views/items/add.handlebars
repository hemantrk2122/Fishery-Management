<h3>
  <span style="color:red">Add </span>Item to Bid</h3>


<div class="row">
  <form action="/items" class="col s12" method="POST" enctype="multipart/form-data">
    {{!-- <div class="row">
      <div class="input-field">
        <input type="text" name="name">
        <label for="name">Name</label>
      </div>
    </div> --}}

    <div class="row">
      <div class="input-field">
        <select name="name">
          <option value="Rohu" selected>Rohu</option>
          <option value="Katla">Katla</option>
          <option value="Shark">Shark</option>
        </select>
        <label for="name">Name</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="grade">
          <option value="A" selected>A</option>
          <option value="B">B</option>
          <option value="C">C</option>
        </select>
        <label for="grade">Grade</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="status">
          <option value="active" selected>Active</option>
          <option value="deactive">Deactive</option>
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <input type="number" name="amount_of_fish">
        <label for="amount_of_fish">Amount(in Kgs)</label>
      </div>
    </div>

    {{!-- <div class="row input-field">
      <p>
        <label for="image">Image URL</label>
        <input type="text" name="image">
      </p>
    </div> --}}
    <div class="row input-field file-field input-field">
      <div class="btn">
        <span>Upload Image</span>
        <input type="file" name="image" id="image">
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>

    <div class="row">
      <label for="bid_date">Bid Time</label>
      <div class="input-field">
        <input type="date" name="bid_date">
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <input type="text" name="boat_number">
        <label for="boat_number">Boat Number</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Describe your Item</h5>
        <textarea name="description" class="materialize-textarea" cols="30" rows="6"></textarea>
      </div>
    </div>

    <input type="submit" value="Save" class="btn">
  </form>
</div>